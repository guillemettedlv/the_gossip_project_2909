<div class="form-group">
<h1>Créer un Gossip !</h1>
</div>

<%= form_tag url_for(action: 'create'), method: "post" do %>
	<!--input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>"-->
  <!--input type="text" name="gossip_text"-->
  <!--input type="submit" value="Valider"-->

  <%= label_tag 'Title' %>
  <%= text_field_tag 'title', @gossip.title, class: "form-control" %>
  <br /> <br />

  <%= label_tag 'Content' %>
  <%= text_area_tag 'content', @gossip.content, class: "form-control" %>
  <br /> <br />

  <%= select_tag 'tag[]', options_for_select(@tags.map{|tag| tag.title }), multiple: true, class: "form-control"%>
  <br /> <br />

  <%= submit_tag "Create Gossip", class: "btn btn-primary" %>
<% end %>

<% if @gossip.errors.any? %>
  <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
  <ul>
    <% @gossip.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
