<!DOCTYPE html>
<html>
  <head>

    <title>TheGossipProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    </head>

    <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
    <%= link_to "The Gossip Project", root_path, :class => "navbar-brand text-white" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
        <a class="nav-link text-white" <%= link_to 'Créer un Gossip', new_gossip_path, :class =>"nav-link" %></a>
        </li>
        <li class="nav-item">
        <a class="nav-link text-white" <%= link_to "Team", team_path %> </a>
        </li>
        <li class="nav-item">
        <a class="nav-link text-white" <%= link_to "Contact", contact_path %> </a>
        </li>
        <% if logged_in? %>
        <li class="nav-item">
          <%= link_to "Se déconnecter", session_path(session[:user_id]), method: :delete, :class =>"nav-link text-white" %>
        </li>
      <% else %>
      <li class="nav-item">
        <%= link_to "Se connecter/s'inscrire", new_session_path, :class =>"nav-link text-white" %>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <%= link_to 'Créer son compte', new_user_path, :class =>"nav-link text-dark" %>
              <%= link_to 'Se connecter', new_session_path, :class =>"nav-link text-dark" %>
            </div>
          </div>
        </li>
      <% end %>
      </ul>
    </div>
  </nav>

  <!--div class="container">
  </div>< /.container -->
  <div class="container">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
  
  <%= yield %>
  </body>
</html>

