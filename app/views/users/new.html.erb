<div class="mx-auto pt-4" style="width: 400px">
<!-- Default form login -->
<%= form_tag url_for(action: 'create'), method: "post", class: "text-center border border-light p-5" do %>

    <p class="h4 mb-4">Inscris toi !</p>


    <%= text_field_tag 'first_name', nil, type: "first_name", id: "defaultLoginFormFirstName", class: "form-control mb-4", placeholder: "Ton prénom" %>
    <%= text_field_tag 'last_name', nil, type: "last_name", id: "defaultLoginFormLastName", class: "form-control mb-4", placeholder: "Ton nom" %>
    <%= text_area_tag 'description', nil, type: "description", id: "defaultLoginFormDescription", class: "form-control mb-4", placeholder: "Une description" %>
    <%= number_field_tag 'age', nil, in: 18...99, id: "defaultLoginFormAge", class: "form-control mb-4", placeholder: "Ton âge" %>
    <%= select_tag 'city[]', options_for_select(@cities.map{|city| city.name }), class: "form-control mb-4", placeholder: "Ta ville" %>
    <%= text_field_tag 'email', nil, type: "email", id: "defaultLoginFormEmail", class: "form-control mb-4", placeholder: "E-mail" %>
    <%= text_field_tag 'password', nil, type: "password", id: "defaultLoginFormPassword", class: "form-control mb-4", placeholder: "Password" %>
    <%= submit_tag "Sign up", class: "btn btn-info btn-block my-4", type: "submit" %>

    <p>Déjà inscrit?
        <%= link_to 'Sign In', new_session_path %>
    </p>
<% end %>
</div>

<% if @user.errors.any? %>
  <p>Nous n'avons pas réussi à créer le profile pour la (ou les) raison(s) suivante(s) :</p>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
